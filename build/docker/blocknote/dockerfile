FROM golang:alpine AS builder

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o /app/blocknote ./cmd/blocknote/main.go

FROM alpine:latest
WORKDIR /app
COPY --from=builder /app/blocknote /app/blocknote

RUN mkdir -p /app/configs
VOLUME /app/configs

EXPOSE 8018

ENTRYPOINT ["sh", "-c", "if [ -f \"${CONFIG_PATH}\" ]; then ./blocknote; elif [ -f \"/app/${CONFIG_PATH}\" ]; then CONFIG_PATH=\"/app/${CONFIG_PATH}\" ./blocknote; else echo \"Error: Config file not found. Please mount your config file to configs/ and set CONFIG_PATH env variable\"; exit 1; fi"]
